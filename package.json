{
  "name": "cloud-app",
  "version": "0.0.1",
  "author": {
    "name": "chris",
    "email": "gugeluojinxu@gmail.com"
  },
  "description": "this is about doc upload for the app",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "antd": "^3.26.7",
    "axios": "^0.19.2",
    "babel-plugin-import": "^1.13.0",
    "cross-env": "^7.0.0",
    "electron-is-dev": "^1.1.0",
    "electron-store": "^4.0.0",
    "fibers": "^4.0.2",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "qiniu": "^7.3.0",
    "react": "^16.12.0",
    "react-app-rewired": "^2.1.5",
    "react-dom": "^16.12.0",
    "react-scripts": "3.4.0",
    "react-simplemde-editor": "^4.1.0",
    "sass": "^1.25.0",
    "typescript": "^3.8.2",
    "uuid": "^3.4.0",
    "wait-port": "^0.2.7"
  },
  "homepage":"./",
  "main": "main.js",
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "dev": "cross-env BROWSER=none npm run start",
    "dev-electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "pigeon",
    "productName": "pigeon",
    "copyright": "Copyright Â© 2020 ${author}",
    "extends": null,
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${text}"
    },
    "dmg": {
      "background": "assets/appdmg.png",
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "chris"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    },
    "files": [
      "build/**/*",
      "node_module/**/*",
      "settings/**/*",
      "package.json",
      "main.js",
      "./src/utils/menuTemplate.js",
      "CreateWindow.js",
      "src/utils/qiniuManger.js"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "customize-cra": "^0.9.1",
    "electron": "7.1.9",
    "electron-builder": "20.6.2"
  }
}
