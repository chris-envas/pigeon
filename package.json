{
  "name": "pigeon",
  "version": "0.0.0",
  "author": {
    "name": "chris",
    "email": "gugeluojinxu@gmail.com"
  },
  "repository": "https://github.com/luojinxu520/cloud-electron-docs",
  "private": true,
  "description": "this is about doc upload for the app",
  "dependencies": {
    "antd": "^3.26.7",
    "axios": "^0.19.2",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^4.0.7",
    "electron-store": "^4.0.0",
    "electron-updater": "^4.2.2",
    "qiniu": "^7.3.0"
  },
  "homepage": "./",
  "main": "main.js",
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"wait-port http://localhost:3000 && electron .\" \"cross-env BROWSER=none npm start\"",
    "dev-electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "cross-env GH_TOKEN=822aac8df6d4d6237d29475e02aee30c42185a59 electron-builder",
    "prepack": "npm run build && npm run buildMain",
    "predist": "npm run build && npm run buildMain",
    "prerelease": "npm run build && npm run buildMain",
    "buildMain": "webpack"
  },
  "build": {
    "appId": "pigeon",
    "productName": "pigeon",
    "copyright": "Copyright Â© 2020 ${author}",
    "extends": null,
    "extraMetadata": {
      "main": "./build/main.js"
    },
    "directories": {
      "buildResources": "assets"
    },
    "publish": [
      "github"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${text}",
      "icon": "./build/icon.ico"
    },
    "dmg": {
      "background": "assets/appdmg.png",
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "chris",
      "icon": "./build/icon.ico"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false,
      "installerIcon": "./build/icon.ico",
      "uninstallerIcon": "./build/icon.ico"
    },
    "linux": {
      "category": "Utility",
      "target": [
        "deb",
        "AppImage"
      ],
      "icon": "./build/icon.ico"
    },
    "files": [
      "build/**/*",
      "node_module/**/*",
      "settings/**/*",
      "package.json"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "babel-plugin-import": "^1.13.0",
    "concurrently": "^5.0.2",
    "cross-env": "^7.0.0",
    "customize-cra": "^0.9.1",
    "electron": "9.4.0",
    "electron-builder": "20.6.2",
    "fibers": "^4.0.2",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "react": "^16.12.0",
    "react-app-rewired": "^2.1.5",
    "react-dom": "^16.12.0",
    "react-scripts": "3.4.0",
    "react-simplemde-editor": "^4.1.0",
    "uuid": "^3.4.0",
    "wait-port": "^0.2.7",
    "webpack-cli": "^3.3.11"
  }
}
